pipeline{
    agent{
        node{
            label "linux&&java11"
        }
     }
    stages{
        stage('cobains script'){
            steps{
                script{
                    // this is utility steps
                    def namaku = [
                        "firstname": "Ilham",
                        "lastname": "Kurniatod"
                    ]
                    writeJSON(file:"data.json",json:data) 
                }
            }
 
        }
        stage('build'){
            steps{
                //script contain java groovy
                script{
                    for (int i = 0; i < 10 ; i++){
                        echo("Script ${i}")
                    }
                }

                echo "start build" 
                sh("./mvnw clean compile test-compile")
                echo "finish build " 
            }
 
        }
        stage('Test'){
            steps{
                echo "start test"   
                sh(" ./mvnw test")
                echo "finish test"
            }
 
        }
        
    }
    post {
        always {
            echo " this is always been fun!"
        }
        success{
            echo " this is sucess!"
        }
        failure {
            echo " sorry yo fail the test"
        }
        cleanup {
            echo "will cleanup soon"
        }
    }
}
