pipeline{
    agent{
        node{
            label "linux&&java11"
        }
     }
    stages{
        stage('build'){
            steps{
                echo "build 1 " 
                echo "build 2 " 
                echo "build 3 " 
            }
 
        }
        stage('Test'){
            steps{
                echo "test from pipeline"   
            }
 
        }
        stage('Deploy'){
            steps{
                echo "deploy from pipeline"   
            }
 
        }
        
    }
    post {
        always {
            echo " this is always been fun!"
        }
        success{
            echo " this is sucess!"
        }
        failure {
            echo " sorry yo fail the test"
        }
        cleanup {
            echo "will cleanup soon"
        }
    }
}
