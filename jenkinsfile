pipeline{
    agent{
        node{
            label "linux&&java11"
        }
     }
    stages{
        stage('build'){
            steps{
                echo "start build" 
                sh("./mvnw clean compile test-compile")
                echo "finish build " 
            }
 
        }
        stage('Test'){
            steps{
                echo "start test"   
                sh(" ./mvnw test")
                echo "finish test"
            }
 
        }
        stage('Deploy'){
            steps{
                echo "deploy from pipeline"   
            }
 
        }
        
    }
    post {
        always {
            echo " this is always been fun!"
        }
        success{
            echo " this is sucess!"
        }
        failure {
            echo " sorry yo fail the test"
        }
        cleanup {
            echo "will cleanup soon"
        }
    }
}
