pipeline{
    agent none
    
    stages{
        stage('build'){
          agent {
            node {
                label "linux && java11"
            }
          }
            steps{
                //script contain java groovy
                script{
                    for (int i = 0; i < 10 ; i++){
                        echo("Script ${i}")
                    }
                }

                echo "start build" 
                sh("./mvnw clean compile test-compile")
                echo "finish build " 
            }
 
        }
        stage('Test'){
          agent {
            node {
              label "linux && java11"
            }
            steps{
                script{
                    def data = [
                        "firstname": "ilham",
                        "lastname": "kurniatod"
                    ]
                    writeJSON(file: "data.json", json: data)
                }
                echo "start test"   
                sh(" ./mvnw test")
                echo "finish test"
            }
 
        }
        
    }
    post {
        always {
            echo " this is always been fun!"
        }
        success{
            echo " this is sucess!"
        }
        failure {
            echo " sorry yo fail the test"
        }
        cleanup {
            echo "will cleanup soon"
        }
    }
}
}